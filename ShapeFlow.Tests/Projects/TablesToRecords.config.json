{
  "name": "Generate Records based on Tables",
  "generators": {
    "TablesToRecords": {
      "version": "1.0.0",
      "loaderName": "DbModelLoader",
      "packageRoot": "$(project-root)",
      "rules": [
        {
          "templateName": "Templates\\TablesToRecords.liquid",
          "outputPathTemplate": "Generated\\Records.cs"
        }
      ]
    }
  },
  "models": [
    {
      "name": "Sales Model",
      "tags": "dbEntityModel",
      "loaderName": "DbModelLoader",
      "parameters": {
        "server": ".",
        "db": "Northwind",
        "user": "sa",
        "password": "qaz123WSX"
      }
    }
  ],
  "pipelines": [
    {
      "name": "Sales Model DDD Entities",

      "input": {
        "selector": "Sales Model"
      },

      "transformation": {
        "name": "Sales Model Entities",
        "generator": "TablesToRecords",
        "input": {
          "selector": "Sales Model"
        }
      },

      "output": {
        "type": "file",
        "parameters": {
          "output-mode": "overwrite"
        }
      }
    }
  ]
}