{
  "name": "DDD Code Generation",  
  "generators": {
    "DDDGenerator": {
      "version":  "1.0.0",
      "loaderName": "JsonLoader",
      "packageRoot": "$(project-root)",
      "rules": [
        {
          "templateName": "Templates\\DomainObjects.liquid",
          "outputPathTemplate": "Generated\\DomainObjects.cs"
        }
      ]
    }
  },
  "models": [
    {
      "name": "Sales Model",
      "tags": "domainEntityModel",
      "loaderName": "JsonLoader",
      "parameters": {
        "model-path": "Models\\Order.json"
      }
    }
  ],
  "pipelines": [
    {
      "name": "Sales Model DDD Entities",
      "input": {
        "selector": "Sales Model"
      },
      "transformation": {
        "name": "Sales Model Entities",
        "generator": "DDDGenerator"
      },
      "output": {
        "type": "file",
        "parameters": {
          "output-mode": "overwrite"
        }
      }
    }
  ]
}