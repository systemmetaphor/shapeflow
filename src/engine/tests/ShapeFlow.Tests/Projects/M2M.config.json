{
  "name": "DDD Code Generation",
  "projections": {
    "M2MGenerator": {
      "input": {
        "format": "json"
      },
      "output": {
        "format": "fileset",
        "loaderName": "fileSetLoader"
      },
      "rules": [
        {
          "fileName": "M2M\\Simple.scs"
        }
      ],
      "rulesBasePath": "Rules",
      "version": "1.0.0"

    }
  },
  "shapes": {
    "SalesModel": {
      "tags": "domainEntityModel",
      "loaderName": "JsonLoader",
      "parameters": {
        "model-path": "Shapes\\Order.json"
      }
    }
  },
  "pipelines": {
    "applicationTier": {
      "stages": {
        "entities":  {
          "selector": "Sales Model",
          "projectionRef": "M2MGenerator"
        }
      }
    }
  }
}