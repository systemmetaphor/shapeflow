{
  "name": "DDD Code Generation",  
  "projections": {
    "DDDGenerator": {
      "version": "1.0.0",
      "expression": "json(1)->fileset(1)", 
      "rulesBasePath": "Rules",
      "rules": [
        {
          "fileName": "DomainObjects\\Aggregates.liquid"
        }
      ]
    }
  },
  "shapes": [
    {
      "name": "Sales Model",
      "tags": "domainEntityModel",
      "loaderName": "JsonLoader",
      "parameters": {
        "model-path": "Models\\Order.json"
      }
    }
  ],
  "pipeline": [
    {
      "name": "Sales Model Entities",
      "input": {
        "selector": "Sales Model"
      },
      "projectionRef": {
        "projection": "DDDGenerator"
      },
      "output": {
        "type": "file",
        "parameters": {
          "output-mode": "overwrite"
        }
      }
    }
  ]
}